<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_dialog_style"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <com.example.deadliner.ColorBarView
        android:id="@+id/cbv_color_pick"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginHorizontal="40dp"
        app:barHeight="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbDrawable="@mipmap/color_icon_button"
        app:thumbHeight="40dp" />

    <TextView
        android:id="@+id/tv_text_color_b"
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/corner_style"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cbv_color_pick" />

    <ImageView
        android:id="@+id/color_confirm"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/icon_ok_lb"
        android:text="确定"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_text_color_b"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>