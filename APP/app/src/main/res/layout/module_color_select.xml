<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_dialog_style"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <com.example.deadliner.ColorBarView
        android:id="@+id/cbv_color_pick"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginHorizontal="40dp"
        app:barHeight="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbDrawable="@mipmap/color_icon_button"
        app:thumbHeight="40dp" />

    <TextView
        android:id="@+id/tv_text_color_b"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/corner_style"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/color_confirm"
        app:layout_constraintBottom_toTopOf="@id/cbv_color_pick" />
    <Button
        android:id="@+id/color_confirm"
        android:layout_width="80dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/tv_text_color_b"
        app:layout_constraintRight_toRightOf="@id/cbv_color_pick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cbv_color_pick"
        android:text="确定"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintTop_toBottomOf="@id/cbv_color_pick"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>