<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_dialog_style"
    android:paddingVertical="40dp"
    android:paddingHorizontal="30dp">
    <TextView
        android:id="@+id/cata_name_title_new"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/gray_blue_dark"
        android:text="新建分类"/>
    <TextView
        android:id="@+id/cata_name_title_edit"
        android:textColor="@color/gray_blue_dark"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible"
        android:text="重命名"/>
    <EditText
        android:id="@+id/cata_name_edit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textColor="@color/gray_blue_dark"
        app:layout_constraintTop_toBottomOf="@id/cata_name_title_new"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cata_name_confirm"
        android:layout_marginEnd="10dp"
        android:text="@string/app_name"/>

    <ImageView
        android:id="@+id/cata_name_confirm"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/icon_ok_lb"
        android:layout_margin="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>