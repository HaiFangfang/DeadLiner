<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingVertical="40dp"
    android:paddingHorizontal="30dp">
    <TextView
        android:id="@+id/cata_name_title_new"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="新建分类"/>
    <TextView
        android:id="@+id/cata_name_title_edit"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible"
        android:text="重命名"/>
    <EditText
        android:id="@+id/cata_name_edit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/cata_name_title_new"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cata_name_confirm"
        android:layout_marginEnd="10dp"
        android:text="@string/app_name"/>
    <Button
        android:id="@+id/cata_name_confirm"
        android:layout_width="80dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/cata_name_title_new"
        app:layout_constraintLeft_toRightOf="@id/cata_name_edit"
        app:layout_constraintRight_toRightOf="parent"

        android:text="确定"/>

</androidx.constraintlayout.widget.ConstraintLayout>