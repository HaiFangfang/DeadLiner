<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shade_color_2"
    android:clickable="true"
    tools:context=".TaskInfo"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/task_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/back"
        app:layout_constraintRight_toLeftOf="@id/edit"
        android:layout_marginStart="20dp"
        android:text="name" />
    <EditText
        android:id="@+id/task_name_edit"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/back"
        app:layout_constraintRight_toLeftOf="@id/edit"
        android:layout_marginStart="20dp"
        android:visibility="invisible"
        android:text="name" />
    <ImageView
        android:id="@+id/edit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/save"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/task_times"
        android:layout_width="0dp"
        android:layout_height="60dip"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bar_alarm"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintLeft_toLeftOf="parent"
         />
    <TextView
        android:id="@+id/task_ddl_minder"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:paddingStart="20dp"
        app:layout_constraintRight_toLeftOf="@id/task_ddl"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="DDL"/>

    <TextView
        android:id="@+id/task_ddl"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        app:layout_constraintRight_toLeftOf="@id/task_days_remain"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintLeft_toRightOf="@id/task_ddl_minder"
        android:text="-"
        />
    <TextView
        android:id="@+id/task_days_remain"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintLeft_toRightOf="@id/task_ddl"
        android:text="余 - 天"
        />



    <TextView
        android:id="@+id/task_start_time_minder"
        android:layout_width="100dp"
        android:layout_height="25dip"
        android:layout_marginStart="5dp"
        android:gravity="center_horizontal"
        app:layout_constraintRight_toLeftOf="@id/task_start_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/task_times"
        android:text="计划开始时间"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/task_start_time"
        android:layout_width="0dp"
        android:layout_height="25dip"

        android:gravity="center_horizontal"
        app:layout_constraintRight_toRightOf="@id/task_ddl"
        app:layout_constraintLeft_toRightOf="@id/task_start_time_minder"
        app:layout_constraintBottom_toBottomOf="@id/task_times"
        android:text="-" />

    <TextView
        android:id="@+id/task_progress"
        android:layout_width="0dp"
        android:layout_height="50dip"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/task_start_time"
        android:text="progress" />


</androidx.constraintlayout.widget.ConstraintLayout>