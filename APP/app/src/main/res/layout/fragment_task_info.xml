<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shade_color_2"
    android:clickable="true"
    android:clipChildren="false"
    tools:context=".TaskInfo"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:paddingTop="13dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/task_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        app:layout_constrainedWidth="true"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/gray_blue_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/back"
        app:layout_constraintRight_toLeftOf="@id/edit"
        android:layout_marginStart="10dp"
        android:text="name" />
    <EditText
        android:id="@+id/task_name_edit"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/gray_blue_dark"
        android:gravity="center_vertical"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/back"
        app:layout_constraintRight_toLeftOf="@id/edit"
        android:layout_marginStart="5dp"
        android:visibility="invisible"
        android:text="name" />
    <ImageView
        android:elevation="10dp"
        android:id="@+id/edit"
        android:layout_marginEnd="20dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/task_ddl"
        android:src="@drawable/icon_edit"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:elevation="10dp"
        android:id="@+id/save"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/task_ddl"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/icon_ok"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/task_times"
        android:layout_width="0dp"
        android:layout_height="60dip"
        android:gravity="center"
        android:elevation="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bar_alarm"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintLeft_toLeftOf="parent"
         />
    <TextView
        android:elevation="10dp"
        android:id="@+id/task_ddl_minder"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:paddingStart="16dp"
        android:shadowRadius="10"
        android:shadowColor="@color/orange_dark"
        android:textStyle="bold"
        android:textColor="@color/orange_light"
        app:layout_constraintRight_toLeftOf="@id/task_ddl"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18dp"
        android:text="DDL "/>

    <TextView
        android:elevation="10dp"
        android:shadowRadius="10"
        android:id="@+id/task_ddl"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textColor="@color/orange_black"
        android:textStyle="bold"
        android:gravity="center_vertical"
        app:layout_constraintRight_toLeftOf="@id/task_days_remain"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintLeft_toRightOf="@id/task_ddl_minder"
        android:text="-"
        android:textSize="18dp"
        />
    <TextView
        android:elevation="10dp"
        android:id="@+id/task_days_remain"
        android:layout_width="100dp"
        android:layout_height="40dp"
android:textStyle="bold"
        android:textColor="@color/orange_black"
        android:gravity="center_vertical"
        android:layout_marginEnd="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintLeft_toRightOf="@id/task_ddl"
        android:text="余 - 天"
        />



    <TextView
        android:elevation="10dp"
        android:id="@+id/task_start_time_minder"
        android:layout_width="100dp"
        android:layout_height="25dip"
        android:layout_marginStart="5dp"
        android:gravity="center_horizontal"
        android:textColor="@color/orange_dark"
        app:layout_constraintRight_toLeftOf="@id/task_start_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/task_times"
        android:text="计划开始时间"
        android:textSize="12dp"/>
    <TextView
        android:elevation="10dp"
        android:id="@+id/task_start_time"
        android:layout_width="0dp"
        android:layout_height="25dip"
        android:textColor="@color/orange_dark"
        android:gravity="left"
        app:layout_constraintBaseline_toBaselineOf="@id/task_start_time_minder"
        app:layout_constraintRight_toRightOf="@id/task_ddl"
        app:layout_constraintLeft_toRightOf="@id/task_start_time_minder"
        app:layout_constraintBottom_toBottomOf="@id/task_times"
        android:text="-" android:textSize="12dp"/>

    <TextView
        android:id="@+id/task_progress_bg"
        android:layout_width="0dp"
        android:layout_height="15dip"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/white"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/task_color"
        app:layout_constraintTop_toBottomOf="@id/task_start_time" />
    <LinearLayout
        android:id="@+id/ll_prog"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintLeft_toLeftOf="@id/task_progress_bg"
        app:layout_constraintRight_toRightOf="@+id/task_progress_bg"
        app:layout_constraintTop_toTopOf="@+id/task_progress_bg"
        app:layout_constraintBottom_toBottomOf="@id/task_progress_bg">
        <TextView
            android:id="@+id/task_progress_trans"
            android:layout_width="0dp"
            android:layout_weight="0"
            android:layout_height="match_parent"
            app:layout_constraintHorizontal_weight="1"
            />
        <ImageView
        android:layout_width="15dp"
        android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/orange_edge"/>
        <TextView
            android:id="@+id/task_progress"
            android:layout_width="0dp"
            android:layout_weight="0"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white"/>

    </LinearLayout>


    <TextView
        android:id="@+id/task_color"
        android:layout_width="90dp"
        android:layout_height="50dip"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@+id/ll_prog"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/task_start_time"
        android:text="CHANGE COLOR" />
    <TextView
        android:id="@+id/task_progress_title"
        android:layout_width="0dp"
        android:layout_height="35dip"
        android:layout_marginLeft="35dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:shadowColor="@color/light_blue_200"
        android:shadowRadius="10"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/task_color"
        android:text="事项分割" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/task_progress_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/task_progress_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/new_progress"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/light_blue"
        app:layout_constraintTop_toBottomOf="@id/task_color"
        app:layout_constraintLeft_toRightOf="@id/task_progress_title"
        app:layout_constraintBottom_toTopOf="@id/task_progress_detail"/>
    <ImageView
        android:layout_width="25dp"
        android:elevation="10dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_add"
        app:layout_constraintTop_toTopOf="@+id/new_progress"
        app:layout_constraintRight_toRightOf="@+id/new_progress"
        app:layout_constraintLeft_toLeftOf="@+id/new_progress"
        app:layout_constraintBottom_toBottomOf="@+id/new_progress"/>

</androidx.constraintlayout.widget.ConstraintLayout>