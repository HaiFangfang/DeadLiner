<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shade_color"
    tools:context="TaskFragment">
<TextView
    android:id="@+id/tasks_header"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:paddingStart="30dp"
    android:textSize="20dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@color/gray_blue"
    android:text="分类管理"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/task_catalogs"
        android:layout_height="0dp"
        android:layout_width="120dp"
        app:layout_constraintTop_toBottomOf="@id/tasks_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray_blue"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/task_blocks"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/tasks_header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/task_catalogs"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>