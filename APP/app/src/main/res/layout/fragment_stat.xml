<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_blue"
    android:orientation="vertical">
    <TextView
        android:id="@+id/timer_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:height="180dp"
        android:background="@drawable/corner_style_timer_out"
        android:width="500dp"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="50sp"/>
    <TextView
        android:id="@+id/tv_timer"
        android:background="@drawable/corner_style_timer_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:height="110dp"
        android:textColor="@color/gray_blue_dark"
        android:width="400dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="00:00:00"
        app:layout_constraintTop_toTopOf="@id/timer_padding"
        android:textSize="50sp"/>
    <TextView
        android:id="@+id/img_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18dp"
        android:shadowColor="@color/light_blue_200"
        android:shadowRadius="15"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toBottomOf="@id/tv_timer"
        app:layout_constraintLeft_toLeftOf="@id/timer_padding"
        app:layout_constraintRight_toLeftOf="@id/img_start"
        android:text="CLEAR"
        />
    <TextView
        android:id="@+id/img_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18dp"
        android:shadowColor="@color/light_blue_200"
        android:shadowRadius="15"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toBottomOf="@id/tv_timer"
        app:layout_constraintLeft_toRightOf="@id/img_clear"
        app:layout_constraintRight_toLeftOf="@id/img_over"
        android:text="START"
        />
    <TextView
        android:id="@+id/img_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:shadowColor="@color/light_blue_200"
        android:shadowRadius="10"
        app:layout_constraintLeft_toRightOf="@id/img_start"
        app:layout_constraintTop_toBottomOf="@id/tv_timer"
        app:layout_constraintRight_toRightOf="@id/timer_padding"
        android:text="OVER"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/time_range"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/timer_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
