<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/cata_op_del"
        android:layout_width="35dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cata_op_edit"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="@color/red"
        android:padding="3dp">
    </Button>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@+id/cata_op_del"
        app:layout_constraintLeft_toLeftOf="@+id/cata_op_del"
        app:layout_constraintBottom_toBottomOf="@+id/cata_op_del"
        app:layout_constraintRight_toRightOf="@+id/cata_op_del"
        android:src="@drawable/icon_del"/>
    <Button
        android:id="@+id/cata_op_edit"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:letterSpacing="-0.1"
        android:textSize="16dp"
        android:shadowColor="@color/trans_light_blue_200"
        android:shadowRadius="10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cata_op_del"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="@color/light_blue"
        android:padding="3dp"
        android:text="RENAME" />

</androidx.constraintlayout.widget.ConstraintLayout>