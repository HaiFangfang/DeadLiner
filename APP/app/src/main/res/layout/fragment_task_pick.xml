<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingVertical="40dp"
    android:paddingHorizontal="30dp">
    <TextView
        android:id="@+id/spinner_title"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textColor="@color/gray_blue_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="选择一个计时任务"/>

    <Spinner
        android:id="@+id/spinner"
        android:popupBackground="@drawable/shape_for_custom_spinner"
        android:background="@drawable/selector_for_custom_spinner"
        android:textColor="@color/gray_blue_dark"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/spinner_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cata_name_confirm"
        android:layout_marginEnd="10dp"
        android:text="@string/app_name"/>
    <ImageView
        android:id="@+id/cata_name_confirm"
        android:layout_width="80dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/spinner_title"
        app:layout_constraintLeft_toRightOf="@id/spinner"
        app:layout_constraintRight_toRightOf="parent"
android:src="@drawable/icon_ok_lb"/>

</androidx.constraintlayout.widget.ConstraintLayout>