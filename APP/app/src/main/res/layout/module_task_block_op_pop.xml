<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="70dp"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/block_op_del"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/block_op_comp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/red"
        android:backgroundTintMode="screen"
        android:padding="3dp"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@+id/block_op_del"
        app:layout_constraintLeft_toLeftOf="@+id/block_op_del"
        app:layout_constraintBottom_toBottomOf="@+id/block_op_del"
        app:layout_constraintRight_toRightOf="@+id/block_op_del"
        android:src="@drawable/icon_del"/>
    <Button
        android:id="@+id/block_op_comp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/block_op_del"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="3dp"
        android:textStyle="bold"
        android:letterSpacing="-0.09"
        android:textSize="16dp"
        android:shadowColor="@color/trans_light_blue_200"
        android:shadowRadius="10"
        android:padding="3dp"
        android:backgroundTint="@color/light_blue"
        android:text="ALL  DONE" />

</androidx.constraintlayout.widget.ConstraintLayout>